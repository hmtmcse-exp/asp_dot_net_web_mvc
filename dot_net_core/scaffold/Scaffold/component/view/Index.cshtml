@model MiaISoftMasterApp.Services.Common.ReadHelper<__MODEL_WIHT_NAMESPACE__>

<h3 class="page-header">__MODEL_NAME__ List</h3>
<div class="panel panel-primary">
    <div class="panel-body">
        
   
        
        <div class="navbar-form navbar-right">
            <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                <div class="btn-group" role="group" aria-label="Third group">
                    <form action="#" method="GET">
                        <div class="input-group" id="search-area">
                            <input type="text" name="search" class="form-control" value="">
                            <div class="input-group-btn">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-default selected-column-label">Search</button>
                                </div>
                            </div>
                        </div>
                    </form>


                </div>
                <div class="btn-group" role="group" aria-label="First group">
                    <a asp-action="Create" class="btn  btn-success">Add New</a>
                    <a href="/__MODEL_NAME__" class="btn  btn-info">Reload</a>
                </div>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                __TABLE_HEAD__
                <th class="action-row">Action</th>
            </tr>
            </thead>
            <tbody>


            @foreach (var item in Model)
            {
                <tr>
                    __TABLE_BODY__
                    <td class="action-row">
                        <div class="btn-toolbar">
                            <div class="btn-group  btn-group-justified">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn  btn-default">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn  btn-default">
                                    <i class="glyphicon glyphicon-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default open-confirm-box" wizard-url="__MODEL_NAME__/Delete/@item.Id" wizard-title="Delete">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div class="paginate-panel">
            <div class="pull-left">
                <item-per-page></item-per-page>
            </div>
            <div class="pull-right">
                <pagination total-row="@Model.TotalRow"></pagination>
            </div>
        </div>
    </div>
</div>